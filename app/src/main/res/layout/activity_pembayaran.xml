<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaksi.Pembayaran">

    <TextView
        android:id="@+id/txtGrandTotal2"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Total: Rp. 125.000"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:background="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/btnSimpanAPI"
        app:layout_constraintStart_toEndOf="@+id/btnBackTransaksi"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBackTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iconback2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnSimpanAPI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iconselesai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="168dp"
        android:text="Bayar :"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGrandTotal2" />

    <EditText
        android:id="@+id/txtBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:digits="0123456789"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
</androidx.constraintlayout.widget.ConstraintLayout>